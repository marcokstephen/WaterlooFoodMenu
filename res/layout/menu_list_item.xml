<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/menu_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:paddingLeft="5dip"
        android:textColor="#43bd00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Weekday" />
    
    <TextView
        android:id="@+id/lunch_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingBottom="2dip"
        android:textStyle="bold"
        android:text="Lunch" />
    
    <TextView
        android:id="@+id/lunch_item1_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="18dip"
        android:text="Sandwich" />
        
    <TextView
        android:id="@+id/lunch_item2_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="18dip"
        android:text="Sandwich" />
        
    <TextView
        android:id="@+id/lunch_item3_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="18dip"
        android:text="Sandwich" />
        
    <TextView
        android:id="@+id/lunch_item4_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="18dip"
        android:text="Sandwich" />
    
    <TextView
        android:id="@+id/dinner_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textStyle="bold"
        android:paddingLeft="10dip"
        android:text="Dinner" />
    
    <TextView
        android:id="@+id/dinner_item1_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="18dip"
        android:text="Sandwich" />
    
    <TextView
        android:id="@+id/dinner_item2_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="18dip"
        android:text="Sandwich" />
        
    <TextView
        android:id="@+id/dinner_item3_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="18dip"
        android:text="Sandwich" />
        
    <TextView
        android:id="@+id/dinner_item4_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="18dip"
        android:text="Sandwich" />
    
</LinearLayout>
